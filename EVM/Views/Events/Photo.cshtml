@{
    ViewBag.Title = "Add Event Wallpaper";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <h3>@ViewBag.Title</h3>
        @using (Html.BeginForm("Photo", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="header">
                    <h4 class="title">Event Wallpaper Section</h4>
                    <p class="category">Enter details</p>
                </div>
                <div class="content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.Label("Wallpaper", htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-7">
                                <input id="photo" type="file" name="photo" class="form-control" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-10">
                                <input type="submit" value="Save Event" class="btn btn-success"/>
                            </div>
                        </div>
                    </div>
                    <div class="footer">
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}