@model IEnumerable<EVM.Models.ApplicationUser>
@{
    ViewBag.Title = "Users List";
    Layout = "~/Views/Shared/SuperAdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="header">
                <h4 class="title">Users List</h4>
                <p class="category"></p>
            </div>
            <div class="content">
                <p>
                    @Html.ActionLink("Register", "Account")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>

                                @*@Html.ActionLink("Edit", "Edit", new { id = item.ArtistId }) |*@
                                @*@Html.ActionLink("Deactivate", "DeactivateAccount", "Account", new { id = item.Id })*@
                                <a href="@Url.Action("DeactivateAccount", "Account", new { id = item.Id})">Deactivate</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>